  <dl>
    <dt><h2><strong>添加考题</strong></h2></dt>
    <dd><p><small>你可选择不同的试题类型</small></p></dd>
  </dl>

  <%= form_tag admin_choose_path, method: "get" do %>
      <%= text_field_tag :exam_id, @exam.id, hidden: true %>
      <div class="form-group">
        <%= select_tag :question_type, options_for_select(Question.question_types), class: "form-control input-lg"  %>
      </div>
      <div class="form-group">
        <%= submit_tag "新建一个问题", class: "btn btn-primary btn-lg btn-block" %>
      </div>
  <% end %>
