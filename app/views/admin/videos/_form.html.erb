<%= form_for @video , url: admin_videos_path do |f| %>
    <div class="form-group">
      <h3><strong><i class="fa fa-tag" aria-hidden="true"></i><%= f.label :title, "视频标题" %></strong></h3>
      <%= f.text_field :name, class: "form-control text-center input-lg" %>
    </div>
    <div class="form-group">
      <h3><strong><i class="fa fa-tag" aria-hidden="true"></i><%= f.label :title, "考试链接" %></strong></h3>
      <%= f.text_field :url, class: "form-control text-center input-lg" %>
    </div>
    <div class="form-group">
      <h3><strong><i class="fa fa-pencil" aria-hidden="true"></i>  <%= f.label :description, "添加介绍" %></strong></h3>
      <%= f.text_area :context, class: "form-control text-center input-lg", rows: 3 %>
    </div>
    <div class="form-group">
      <%= f.submit "保存", class: "btn btn-primary btn-lg btn-block" %>
    </div>
<% end %>
