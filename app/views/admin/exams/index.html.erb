<div class="home-page">
  <h1>考试管理</h1>
  <!-- /.row -->
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= link_to '新建考试', new_admin_exam_path, class: 'btn btn-default btn-danger' %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
            <tr>
              <th class="center">考试标题</th>
              <th class="center">简介</th>
              <th class="center">时间</th>
              <th class="center">参与人数</th>
              <th class="center">操作</th>
            </tr>
            </thead>
            <tbody>
            <% @exams.each do |exam| %>
                <tr>
                  <td class="center"><%= exam.title.capitalize %></td>
                  <td class="center"><%= exam.description.capitalize %></td>
                  <td class="center"><%= exam.created_at.in_time_zone('Asia/Shanghai') %></td>
                  <td></td>
                  <td class="center">
                    <%= link_to '编辑考试', edit_admin_exam_path(exam), class: 'btn btn-xs btn-success' %>
                    <%= link_to "查看答卷", edit_admin_exam_path(exam), class: "btn btn-info" %>
                    <%= link_to "查看成绩", edit_admin_exam_path(exam), class: "btn btn-info" %>
                    <%= link_to "添加问题", admin_choices_path(:exam_id => exam.id), class: "btn btn-info" %>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>





