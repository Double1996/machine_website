<% provide(:title, '考试列表') %>
<h1>考试列表</h1>

<div class="row">
  <%= link_to '新建考试', new_admin_exam_path, class: 'btn btn-default btn-danger' %>
  <table>
    <thead>
    <tr>
      <th>考试标题</th>
      <th>考试简介</th>
      <th>考试时间</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
    <% @exams.each do |exam| %>
        <tr>
          <td><%= exam.title.capitalize %></td>
          <td><%= exam.description.capitalize %></td>
          <td><%= exam.created_at.in_time_zone('Asia/Shanghai') %></td>
          <td>
            <%= link_to '编辑考试', edit_admin_exam_path(exam), class: 'btn btn-xs btn-success' %>
            <%= link_to "查看答卷", edit_admin_exam_path(exam), class: "btn btn-info" %>
            <%= link_to "查看成绩", edit_admin_exam_path(exam), class: "btn btn-info" %>
            <%= link_to "添加问题", choices_path(:exam_id => exam.id), class: "btn btn-info" %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>





