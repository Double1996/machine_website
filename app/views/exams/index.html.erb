<% provide(:title, '在线考试') %>
<!--  Main Wrap  -->
<div id="main-wrap">
  <!--  Page Content  -->
  <div id="page-content" class="header-static">
    <!--  Page Header  -->
    <div id="page-header" class="secondary-background">
      <div class="container">
        <div class="row no-margin">
          <div class="text">
            <h1 class="white">在线考试</h1>
            <ul class="breadcrumb white">
              <li>机械工程</li>
              <li>机械工程材料</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div id="home-wrap" class="content-section fullpage-wrap">
      <% @exams.each do |exam| %>
          <div class="container">
            <div class="row no-margin padding-lg">
              <div class="col-md-4 padding-leftright-null">
                <div class="text padding-topbottom-null">
                  <h2 class="margin-bottom-null left"><%= exam.title.capitalize %></h2>
                </div>
              </div>
              <div class="col-md-4 padding-leftright-null">
                <div class="text padding-topbottom-null">
                  <h3>
                    发起时间：<strong style="color: #ff0e40"><%= exam.created_at.strftime("%Y-%m-%d") %></strong></h1>
                  </h3>
                  <p class="margin-bottom-null">
                    <%= exam.description %>
                  </p>
                </div>
              </div>
              <div class="col-md-4 padding-leftright-null">
                <div class="text padding-topbottom-null">
                  <h2 class="margin-bottom-null right">
                    <%= link_to '参加考试', new_respondent_path(:exam_id => exam.id), class: 'label btn-success' %>
                  </h2>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>

